<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itcr.clinica"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="7" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.itcr.clinica.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.itcr.clinica.activities.MapActivity"
            	  android:screenOrientation="landscape"></activity>
        <activity android:name="com.itcr.clinica.activities.InformationListActivity"></activity>
        <activity android:name="com.itcr.clinica.activities.ScheduleListActivity"></activity>
        <activity android:name="com.itcr.clinica.activities.ContactListActivity"></activity>
    </application>

</manifest>